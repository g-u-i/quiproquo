    <div class="ticket">
      <div class=legende>
        <p class="cote"><strong>{{page.numero_livre}}</strong>.{{page.largeur}}.{{page.hauteur}}.{{page.nombre_de_pages}}.{{{colorCode page.mode_colorimetrique}}}.{{page.nombre_d_exemplaires}}</p>
